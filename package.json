{
  "name": "staticman",
  "version": "3.0.0",
  "description": "Static sites with superpowers",
  "main": "index.js",
  "scripts": {
    "prestart": "if [ ! -d node_modules ]; then npm install; fi",
    "postinstall": "cd functions/staticman && yarn --production",
    "build": "netlify-lambda build .",
    "serve": "netlify-lambda serve .",
    "start": "node index.js",
    "test": "standard && jest",
    "test-dev": "TEST_DEV=true jest --watch"
  },
  "engines": {
    "node": ">=18 <19"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eduardoboucas/staticman.git"
  },
  "author": "Eduardo Boucas <mail@eduardoboucas.com> (https://eduardoboucas.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eduardoboucas/staticman/issues"
  },
  "homepage": "https://github.com/eduardoboucas/staticman#readme",
  "dependencies": {
    "@dadi/logger": "^1.4.3",
    "@octokit/auth-oauth-app": "^3.0.2",
    "@octokit/rest": "^16.43.1",
    "akismet": "^1.0.0",
    "axios": "^0.21.1",
    "body-parser": "^1.17.x",
    "bunyan-slack": "0.0.10",
    "compression": "^1.7.4",
    "convict": "^4.3.0",
    "cors": "^2.8.5",
    "encoding": "^0.1.12",
    "express": "^4.14.0",
    "express-github-webhook": "^1.0.5",
    "express-recaptcha": "^2.1.0",
    "eslint": "^7.9.0"
    "gitlab": "^3.5.1",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.4.0",
    "mailgun-js": "^0.22.0",
    "markdown-table": "^1.0.0",
    "md5": "^2.1.0",
    "moment": "^2.18.1",
    "morgan": "^1.10.0",
    "netlify-lambda": "^1.6.3",
    "node-rsa": "^0.4.2",
    "object-path": "^0.11.1",
    "request-promise": "^4.2.2",
    "serverless-http": "^2.3.2",
    "sha1": "^1.1.1",
    "slug": "^0.9.4",
    "universal-analytics": "^0.4.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "front-matter": "^2.1.2",
    "istanbul-cobertura-badger": "^1.3.0",
    "jest": "^23.6.0",
    "lodash": "^4.17.15",
    "nock": "^9.0.13",
    "standard": "^10.0.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "lib/**/*.js",
      "*.js"
    ],
    "coverageReporters": [
      "cobertura"
    ],
    "testMatch": [
      "*/**/test/acceptance/**/*.test.js",
      "*/**/test/unit/**/*.test.js"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "test/**/*"
    ]
  }
}
